#!/bin/bash
set -o errexit

if [ -z $1 ]
then
  LEVEL="patch"
else
  LEVEL=$1
fi
grunt bump:$LEVEL full-compile compress
scp LapisAzurai.zip 192.254.186.53:LapisAzurai.zip
echo "Unpacking..."
ssh 192.254.186.53 "cd LapisAzurai && rm -rf * && mv ../LapisAzurai.zip . && unzip -q LapisAzurai.zip"
echo "Deployed."
